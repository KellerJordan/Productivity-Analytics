{
    "manifest_version": 2,
    "name": "Safety Net",
    "version": "0.1",

    "background": {
        "scripts": [
            "consts.js",
            "extension.js"
        ]
    },

    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "nativeMessaging"
    ],

    "applications": {
        "gecko": {
            "id": "safety-net@cruzhacks.com",
            "strict_min_version": "40.0"
        }
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "consts.js",
            "content-script.js"
        ],
        "css": [
            "suspicious-style.css"
        ]
    }]
}
